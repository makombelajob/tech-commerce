{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}

<section class="row">
    <div>
        <h1>Tech market</h1>
    </div>
    <div>
        {% for product in products %}
            <article class="alert alert-primary">
                <figure>
                    <img src="{{ asset('images/' ~  product.name  ~ '.png') }}" alt="Image d'un Ordianteur portable de marque Asus" width="100%" height="100%">
                    <figcaption>
                        <h2>Ordinateur Portable : {{ product.name }}</h2>
                        <p>Description : {{ product.description }} </p>
                        <span>{{ product.price }} Euros</span>
                    </figcaption>
                </figure>   
                <div class="text-center">
                    <a href="{{ path('app_payment', {id:product.id}) }}" class="btn btn-primary">Ach√®ter</a>
                </div>
            </article>
        {% endfor %}
    </div>

</section>
{% endblock %}
